<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | Smart Study Scheduler</title>
    <!-- <link rel="stylesheet" href="styles/dashboard.css"> -->
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome, <%= user.username %></h1>
            <a href="/logout" class="btn btn-secondary">Logout</a>
        </header>

        <section class="add-topic">
            <h2>Add New Topic</h2>
            <form action="/topics/add" method="POST">
                <div class="form-group">
                    <label for="subject_name">Subject</label>
                    <input type="text" id="subject_name" name="subject_name" required>
                </div>
                <div class="form-group">
                    <label for="topic_name">Topic</label>
                    <input type="text" id="topic_name" name="topic_name" required>
                </div>
                <div class="form-group">
                    <label for="initial_study_date">Initial Study Date</label>
                    <input type="date" id="initial_study_date" name="initial_study_date" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Topic</button>
            </form>
        </section>

        <section class="due-topics">
            <h2>Topics Due for Revision</h2>
            <% if (dueTopics && dueTopics.length > 0) { %>
                <div class="topics-grid">
                    <% dueTopics.forEach(topic => { %>
                        <div class="topic-card">
                            <h3><%= topic.subject_name %></h3>
                            <p><%= topic.topic_name %></p>
                            <p>Due: <%= new Date(topic.next_revision_date).toLocaleDateString() %></p>
                            <form action="/topics/revise" method="POST">
                                <input type="hidden" name="topic_id" value="<%= topic.id %>">
                                <div class="rating-group">
                                    <label>How well did you remember?</label>
                                    <select name="retention_rating" required>
                                        <option value="1">1 - Poor</option>
                                        <option value="2">2 - Fair</option>
                                        <option value="3">3 - Good</option>
                                        <option value="4">4 - Very Good</option>
                                        <option value="5">5 - Perfect</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-success">Complete Revision</button>
                            </form>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>No topics due for revision today!</p>
            <% } %>
        </section>

        <section class="all-topics">
            <h2>All Topics</h2>
            <% if (allTopics && allTopics.length > 0) { %>
                <div class="topics-grid">
                    <% allTopics.forEach(topic => { %>
                        <div class="topic-card">
                            <h3><%= topic.subject_name %></h3>
                            <p><%= topic.topic_name %></p>
                            <p>Next revision: <%= new Date(topic.next_revision_date).toLocaleDateString() %></p>
                            <p>Current interval: <%= topic.current_interval %> days</p>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>No topics added yet!</p>
            <% } %>
        </section>
    </div>
</body>
</html>